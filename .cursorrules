# Cursor Project Configuration

# Project Type
language = "javascript"
framework = "node"

# Project Structure
root_dir = "src"
entry_file = "src/index.js"
test_dir = "tests"

# File Patterns
[patterns]
source = ["src/**/*.js"]
configs = ["*.json", "*.js", ".env*", ".cursor"]
ignore = [
    "node_modules/**",
    "dist/**",
    ".git/**",
    "*.log",
    "*.lock",
    ".DS_Store"
]

# Command Configurations
[commands]
start = "npm start"
dev = "npm run dev"
deploy = "npm run deploy"
test = "npm test"

# Editor Settings
[editor]
tab_size = 2
insert_spaces = true
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# Code Style
[style]
quotes = "double"
semicolons = true
trailing_comma = "es5"

# Discord Bot Specific
[bot]
commands_dir = "src/commands"
services_dir = "src/services"
config_dir = "src/config"

# File Associations
[associations]
"*.js" = "javascript"
".env*" = "dotenv"
"package.json" = "json"
"*.md" = "markdown"

# Linting and Formatting
[lint]
eslint = true
prettier = true
eslint_config = ".eslintrc"
prettier_config = ".prettierrc"

# Environment
[env]
node_version = ">=16.9.0"
required_vars = [
    "DISCORD_TOKEN",
    "PLANE_API_KEY",
    "WORKSPACE_SLUG",
    "PROJECT_ID",
    "CLIENT_ID"
]

# Docker Settings
[docker]
dockerfile = "Dockerfile"
compose_file = "docker-compose.yml"
ignore_file = ".dockerignore" 